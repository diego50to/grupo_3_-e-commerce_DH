<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
      <main>
        <section class="container">
          <h2><span>
              <%= person.name %>
            </span></h2>
          <div>
            <div class="client">
              <div class="left-part">
                <img src="/images/users/<%= person.image %>" class="detail_user" alt="User Image">
                <div class="user-info">
                  <h3>
                    Email
                  </h3>
                  <p>
                    <%= person.email %>
                  </p>
                  <br>
                  <h3>
                    Tel√©fono
                  </h3>
                  <p>
                    <%= person.phonenumber %>
                  </p>
                  <br>
                  <h3>
                    Nombre de Usuario
                  </h3>
                  <p>
                    <%= person.user[0].username %>
                  </p>
                  <br>

                </div>
              </div>
              <div class="right-part">
                <a class="button" href="/users/edit/<%= person.id %>">Editar</a>
                <button>Borrar</button>
              </div>
            </div>

          </div>
          <br>
        </section>
        <%- include('../partials/follow-us') %>
      </main>
      <%- include('../partials/footer') %>
  </body>

</html>