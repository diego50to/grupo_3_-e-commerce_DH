<%- include('header') %>

  <a href="/admin/products/create" class="btn btn-primary btn-sm mb-2">Nuevo</a>

  <table class="table">
    <thead class="table-dark">
      <th>Nombre</th>
      <th>Categoria</th>
      <th>Precio</th>
      <th>Operaciones</th>
      </th>
    </thead>
    <tbody>
      <% products.forEach(product=> { %>
        <tr>
          <td>
            <%= product.name %>
          </td>
          <td>
            <%= product.category.name %>
          </td>
          <td>
            <%= product.price %>
          </td>
          <td>
            <a href="/products/<%= product.id%>/edit" class="btn btn-success btn-sm">Editar</a>
            <a href="/products/<%= product.id%>/delete" class="btn btn-danger btn-sm">Eliminar</a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
<%- include('footer') %>